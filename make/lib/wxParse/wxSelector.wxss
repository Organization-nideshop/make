picker-view {
  width: 100%;
  height: 320rpx;
  position: absolute;
  bottom: 0;
}

picker-view-column {
  text-align: center;
  background: #fff;
}

.modal-screen {
  position: fixed;
  width: 100%;
  height: 100%;
  opacity: 0.7;
  background-color: #000;
  top: 0;
  left: 0;
  z-index: 1000;
}

.modal {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 390rpx;
  display: flex;
  flex-direction: column;
  z-index: 9999;
  font-size: 24rpx;
  background-color: #d9d9d9;
}

.btn-area {
  width: 100%;
  padding: 0 30rpx;
  height: 70rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.btn-area span {
  height: 45rpx;
  width: 100rpx;
  font-size: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 8rpx;
  background-color: #fff;
  color: #c9a16d;
}

.btn-area span:nth-child(2) {
  background: #c9a16d;
  color: #fff;
  border: none;
}

.selectedItems {
  height: 60rpx;
  text-align: center;
  color: #c9a16d;
}
