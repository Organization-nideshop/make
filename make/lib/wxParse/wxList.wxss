/* 图标 */

.tips {
  background: #fff;
  color: #b99567;
  width: 40rpx;
  height: 40rpx;
  border-radius: 40rpx;
  position: absolute;
  display: block;
  margin: 10rpx -5rpx;
  font-size: 18rpx;
  line-height: 40rpx;
  text-align: center;
}

#tips {
  background: #b99567;
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  text-align: center;
  margin: 10rpx -5rpx;
}

#tips:before, #tips:after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  height: 40rpx;
  width: 40rpx;
  background: #b99567;
}

#tips:before {
  -webkit-transform: rotate(18deg);
  -moz-transform: rotate(18deg);
  -ms-transform: rotate(18deg);
  -o-transform: rotate(18deg);
  transform: rotate(18deg);
}

#tips:after {
  -webkit-transform: rotate(36deg);
  -moz-transform: rotate(36deg);
  -ms-transform: rotate(36deg);
  -o-transform: rotate(36deg);
  transform: rotate(36deg);
}

#tips2 {
  background: #b99567;
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  text-align: center;
  margin: 10rpx -5rpx;
}

#tips2:before, #tips2:after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  height: 40rpx;
  width: 40rpx;
  background: #b99567;
}

#tips2:before {
  -webkit-transform: rotate(54deg);
  -moz-transform: rotate(54deg);
  -ms-transform: rotate(54deg);
  -o-transform: rotate(54deg);
  transform: rotate(54deg);
}

#tips2:after {
  -webkit-transform: rotate(72deg);
  -moz-transform: rotate(72deg);
  -ms-transform: rotate(72deg);
  -o-transform: rotate(72deg);
  transform: rotate(72deg);
}

#tips3 {
  width: 44rpx;
  height: 44rpx;
  border-radius: 44rpx;
  position: absolute;
  background: #b99567;
  color: #fff;
  display: block;
  margin: 12rpx -7rpx;
  font-size: 18rpx;
  line-height: 44rpx;
  text-align: center;
}

#tips4 {
  width: 0;
  height: 0;
  border-bottom: 6rpx solid #b99567;
  border-right: 30rpx solid transparent;
  position: absolute;
  left: 50%;
  bottom: 0;
}

