/* 排序css */
.sort {
  background: #fff;
  width: 100%;
  height: 70rpx;
  position: fixed;
  z-index: 999;
  border-bottom: 1px solid #eee;
}

.sort-box {
  background: #fff;
  width: 100%;
  height: 100%;
  overflow: hidden;
  display: flex;
}

.sort-box .item {
  flex: 1;
  color: #333;
  font-size: 30rpx;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: center;
}

.sort-box .item .txt {
  display: block;
  color: #333;
  font-size: 26rpx;
}

.sort-box .item.active .txt {
  color: #b99567;
}

.sort-box-category {
  background: #fff;
  width: 100%;
  height: auto;
  overflow: hidden;
  padding: 40rpx 40rpx 0 0;
  border-bottom: 1px solid #d9d9d9;
}

.sort-box-category .item {
  height: 54rpx;
  line-height: 54rpx;
  text-align: center;
  float: left;
  padding: 0 16rpx;
  margin: 0 0 40rpx 40rpx;
  border: 1px solid #666;
  color: #333;
  font-size: 24rpx;
}

.sort-box-category .item.active {
  color: #b99567;
  border: 1px solid #b99567;
}

.sort .sort-box .triangle-asc {
width: 0;
height: 0;
border-width: 8rpx;
border-style: solid;
border-color:  transparent transparent #333 transparent;
margin:5rpx 6rpx;
}

.sort .sort-box .triangle-desc {
width: 0;
height: 0;
border-width: 8rpx;
border-style: solid;
border-color: #333 transparent transparent transparent;
margin:5rpx 6rpx;
}

.sort .sort-box .triangle-asc.active {
border-color:  transparent transparent #c9a16d transparent;
}

.sort .sort-box .triangle-desc.active {
border-color: #c9a16d transparent transparent transparent;
}

/* 商品列表css */
.goodsItem {
  display: block;
  float: left;
  width: 50%;
  text-align: center;
  padding-bottom: 10px;
  padding-left: 15px;
}

.goodsItem.navigator-hover {
  background-color: #fff;
}

.goodsItem.last {
  margin-right: 0;
}

.goodsItem .icon {
  height: 180rpx;
  width: 210rpx;
}

.goodsItem .np {
  height: 35rpx;
  color: #333;
  font-size: 30rpx;
  margin: 0 20rpx 8rpx 20rpx;
  width: 100%;
