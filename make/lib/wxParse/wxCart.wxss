.cartAdd {
  position: fixed;
  right: -40rpx;
  top: 50%;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  line-height: 115rpx;
  box-shadow: -1rpx -2rpx 2rpx 3rpx #dedede;
  text-align: right;
  padding-right: 40rpx;
  z-index: 999;
}

.cartAdd image {
  width: 34rpx;
  height: 31rpx;
}

.icon_dot_notices {
  margin: 0 12rpx;
  height: 24rpx;
  background-color: #b99567;
  line-height: 24rpx;
  font-size: 12rpx;
  position: absolute;
  top: 20rpx;
  right: 35px;
}

.icon_dot_notices_inner {
  display: block;
  position: relative;
  z-index: 2;
  margin: 0 -6rpx;
  color: #fff;
  border: 0;
  background-color: #b99567;
}

.icon_dot_notices_left {
  position: absolute;
  left: -12rpx;
  top: 0;
  background-color: #b99567;
  width: 12rpx;
  height: 24rpx;
  vertical-align: middle;
  display: inline-block;
  border-bottom-left-radius: 24rpx;
  border-top-left-radius: 24rpx;
  z-index: 1;
  border: 0;
}

.icon_dot_notices_right {
  position: absolute;
  right: -12rpx;
  top: 0;
  background-color: #b99567;
  width: 12rpx;
  height: 24rpx;
  vertical-align: middle;
  display: inline-block;
  border-bottom-right-radius: 24rpx;
  border-top-right-radius: 24rpx;
  z-index: 1;
  border: 0;
}
