@import "../../lib/wxParse/wxList.wxss";
@import "../../lib/wxParse/wxCart.wxss";

page {
  min-height: 100%;
  background-color: #fff;
}

.container {
  min-height: 100%;
  background-color: #fff;
}

.search-header {
  position: fixed;
  top: 0;
  width: 750rpx;
  height: 91rpx;
  display: flex;
  background: #fff;
  padding: 0 30rpx;
  font-size: 29rpx;
  color: #333;
  z-index: 999;
}

.search-header .input-box {
  position: relative;
  margin-top: 16rpx;
  float: left;
  width: 0;
  flex: 1;
  height: 59rpx;
  line-height: 59rpx;
  padding: 0 20rpx;
  background: #f4f4f4;
}

.search-header .icon {
  position: absolute;
  top: 8rpx;
  right: 20rpx;
  width: 40rpx;
  height: 43rpx;
}

/* .search-header .del {
  position: absolute;
  top: 3rpx;
  right: 10rpx;
  width: 53rpx;
  height: 53rpx;
  z-index: 10;
} */

.search-header .keywrod {
  position: absolute;
  top: 0;
  width: 506rpx;
  height: 59rpx;
}

.search-header .right {
  margin-top: 24rpx;
  margin-left: 31rpx;
  margin-right: 6rpx;
  width: 58rpx;
  height: 43rpx;
  line-height: 43rpx;
  float: right;
}

.search-result {
  margin-top: 91rpx;
}

.no-search {
  height: auto;
  overflow: hidden;
  margin-top: 91rpx;
}

.serach-keywords {
  background: #fff;
  /* width: 750rpx; */
  height: auto;
  overflow: hidden;
  margin: 0 20rpx;
}

.serach-keywords .h {
  padding: 0 10rpx;
  height: 70rpx;
  width: 100%;
  color: #999;
  font-size: 29rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #eee;
  margin-bottom: 30rpx;
}

.serach-keywords .h view {
  width: 50rpx;
  display: flex;
  align-items: center;
}

.serach-keywords image {
  width: 30rpx;
  height: 33rpx;
}

.serach-keywords .title {
  display: flex;
  width: 120rpx;
  font-size: 30rpx;
  color: #b99567;
  flex: 1;
}

.serach-keywords .clear {
  float: right;
  display: block;
  width: 115rpx;
}

.serach-keywords .b {
  width: 100%;
  height: auto;
  overflow: hidden;
  padding-left: 31.25rpx;
  border-bottom: 1px solid #eee;
}

.serach-keywords .item {
  display: inline-block;
  width: auto;
  height: 48rpx;
  line-height: 48rpx;
  padding: 0 15rpx;
  margin: 0 31.25rpx 31.25rpx 0;
  font-size: 24rpx;
  color: #666;
}

/* 排序 start */

.sort {
  position: fixed;
  top: 91rpx;
  background: #fff;
  width: 100%;
  height: 70rpx;
  z-index: 999;
}

.sort-box {
  background: #fff;
  width: 100%;
  height: 100%;
  overflow: hidden;
  padding: 0 30rpx;
  display: flex;
  border-bottom: 1px solid #d9d9d9;
}

.sort-box .item {
  height: 78rpx;
  line-height: 78rpx;
  text-align: center;
  flex: 1;
  color: #333;
  font-size: 30rpx;
}

.sort-box .item .txt {
  display: block;
  width: 100%;
  height: 100%;
  color: #333;
}

.sort-box .item.active .txt {
  color: #b99567;
}

/* 排序 end */

/* 商品列表 start */

.cate-item {
  height: auto;
  width: 100%;
  overflow: hidden;
  padding:0 30rpx 50rpx 30rpx;
  margin-top: 70rpx;
  float: left;
}

/* 商品列表 end */

/* 未查找到商品 start */

.search-result-empty {
  width: 100%;
  height: 100%;
  padding-top: 300rpx;
}

.search-result-empty .icon {
  margin: 0 auto;
  display: block;
  width: 240rpx;
  height: 240rpx;
}

.search-result-empty .text, .cate-item .b .tip1_text, .cate-item .b .tip2_text {
  display: block;
  width: 100%;
  height: 40rpx;
  font-size: 28rpx;
  text-align: center;
  color: #999;
}

/* 未查找到商品 end */
