}

.tips {
  background: #fff;
  color: #c9a16d;
  width: 42rpx;
  height: 42rpx;
  border-radius: 50%;
  border: 1px solid #c9a16d;
  position: absolute;
  display: block;
  margin: 9rpx -6rpx;
  font-size: 18rpx;
  line-height: 42rpx;
  text-align: center;
}

#tips {
  background: #b99567;
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  text-align: center;
  margin: 10rpx -5rpx;
}

#tips:before, #tips:after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  height: 40rpx;
  width: 40rpx;
  background: #b99567;
}

#tips:before {
  -webkit-transform: rotate(18deg);
  -moz-transform: rotate(18deg);
  -ms-transform: rotate(18deg);
  -o-transform: rotate(18deg);
  transform: rotate(18deg);
}

#tips:after {
  -webkit-transform: rotate(36deg);
  -moz-transform: rotate(36deg);
  -ms-transform: rotate(36deg);
  -o-transform: rotate(36deg);
  transform: rotate(36deg);
}

#tips2 {
  background: #b99567;
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  text-align: center;
  margin: 10rpx -5rpx;
}

#tips2:before, #tips2:after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  height: 40rpx;
  width: 40rpx;
  background: #b99567;
}

#tips2:before {
  -webkit-transform: rotate(54deg);
  -moz-transform: rotate(54deg);
  -ms-transform: rotate(54deg);
  -o-transform: rotate(54deg);
  transform: rotate(54deg);
}

#tips2:after {
  -webkit-transform: rotate(72deg);
  -moz-transform: rotate(72deg);
  -ms-transform: rotate(72deg);
  -o-transform: rotate(72deg);
  transform: rotate(72deg);
}

.tips3 {
  width: 42px;
  height: 42px;
  margin: 100px auto;
  background-color: #b99567;
  border-bottom-color: #b99567;
  color: #fff;
  font-size: 24rpx;
  font-family: Arial;
  line-height: 42px;
  padding: 5rpx 12rpx 5rpx 12rpx;
  box-sizing: border-box;
  position: absolute;
  word-break: break-all;
  border-radius: 42rpx;
}

.tips3::after {
  content: '';
  position: absolute;
  width: 10rpx;
  height: 2rpx;
  right: 3rpx;
  bottom: 0rpx;
  border-width: 0 0 2rpx 6rpx;
  border-style: solid;
  border-left-color: transparent;
  border-bottom-color: inherit;
  border-bottom-right-radius: 180rpx;
}
