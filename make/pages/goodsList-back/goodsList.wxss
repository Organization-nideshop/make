.catalog {
  flex: 1;
  width: 100%;
  background: #fff;
  display: flex;
  border-top: 1px solid #fafafa;
  font-size: 32rpx;
}

.catalog .nav {
  width: 162rpx;
  height: 100%;
  box-shadow: -2rpx 2rpx 10rpx 3rpx #dedede;
}

.rec {
  width: 80%;
  margin: 0 auto;
  height: 60rpx;
  line-height: 60rpx;
  border-bottom: 1px solid #b9b8b8;
  text-align: center;
  color: #666;
}

.catalog .nav .item {
  text-align: center;
  line-height: 90rpx;
  width: 80%;
  margin: 0 auto;
  height: 90rpx;
  color: #666;
  /*font-size: 32rpx;*/
  border-left: 6rpx solid #fff;
  border-bottom: 1px solid #b9b8b8;
}

.catalog .nav .item.active {
  color: #c9a16d;
  font-size: 36rpx;
  border-left: 1px solid #c9a16d;
}

.catalog .cate {
  border-left: 1px solid #fafafa;
  flex: 1;
  height: 100%;
}

.order-nav {
  height: 60rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 10%;
  font-size: 28rpx;
  border-bottom: 1px solid #b9b8b8;
}

