page{
    height: 100%;
    width: 100%;
    background: #fff;
}
.container{
    background: #fff;
    height: auto;
    overflow: hidden;
    width: 100%;
}
.sign-top{
    padding: 10px 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.icon-items{
    width: 70px;
    height: 75px;
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 5px;
}
.icon{
    width: 70px;
    height: 70px;
    border-radius: 50%;
    border: 1px solid #c9a16d;
}
.icon-items span{
    position: absolute;
    bottom: 0;
    background: #c9a16d;
    color: #fff;
    font-size: 12px;
    padding: 0 5px;
}
.userInfo{
    width: 55%;
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 12px;
    color: #888;
}
.tips-top{
    font-size: 12px;
    color: #888;
    margin-bottom: 5px;
}
.tips-top span {
    color: #c9a16d;
    font-size: 12px;
    padding-right: 5px;
}

progress{
    width: 90%;
    border: 1px solid #888;
    border-radius: 5px;
    margin-top: 5px;
}

.sign-content{
    background: #eee;
    height: 100px;
    width: 100%;
    /*padding-top: 20px;*/
    display: flex;
    align-items: center;
}
.progress-left{
    width: 20px;
    height: 30px;
    background: #c9a16d;
    border-top-right-radius: 5px;
    border-bottom-right-radius: 5px;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: left;
    float: left;
}
.triangle{
    width: 7px;
    height: 7px;
    border-right: 2px solid #fff;
    border-bottom: 2px solid transparent;
    border-top: 2px solid #fff;
    border-left: 2px solid transparent;
    position: absolute;
    transform:rotate(45deg);
}
