page{
    height: 100%;
    width: 100%;
    background: #fff;
}
.container{
    background: #fff;
    height: auto;
    overflow: hidden;
    width: 100%;
}
.sign-top{
    padding: 20rpx 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.icon-items{
    width: 140rpx;
    height: 150rpx;
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 10rpx;
}
.icon{
    width: 140rpx;
    height: 140rpx;
    border-radius: 50%;
    border: 2rpx solid #c9a16d;
}
.icon-items span{
    position: absolute;
    bottom: 0;
    background: #c9a16d;
    color: #fff;
    font-size: 28rpx;
    padding: 0 10rpx;
}
.userInfo{
    width: 55%;
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 28rpx;
    color: #888;
}
.tips-top{
    font-size: 28rpx;
    color: #888;
    margin-bottom: 10rpx;
}
.tips-top span {
    color: #c9a16d;
    font-size: 28rpx;
    padding-right: 10rpx;
}

progress{
    width: 90%;
    border: 2rpx solid #888;
    border-radius: 10rpx;
    margin-top: 10rpx;
}

.sign-content{
    background: #eee;
    width: 100%;
}
.sign-list{
    height: 140rpx;
    width: 100%;
    display: flex;
    align-items: center;
}
.progress-left{
    width: 40rpx;
    height: 60rpx;
    background: #c9a16d;
    border-top-right-radius: 10rpx;
    border-bottom-right-radius: 10rpx;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    float: left;
}
.triangle{
    width: 14rpx;
    height: 14rpx;
    border-right: 4rpx solid #fff;
    border-bottom: 4rpx solid transparent;
    border-top: 4rpx solid #fff;
    border-left: 4rpx solid transparent;
    position: absolute;
    transform:rotate(45deg);
}
.progress-line{
    width: calc(100% - 40rpx);
    right: 0;
    height: 10rpx;
    background: #c9a16d;
    position: absolute;
    z-index: 1;
}
.progress-section-list{
    width: calc(100% - 40rpx);
    height: 60rpx;
    display: flex;
    justify-content: space-between;
    padding: 0 40rpx;
}
.progress-section-items{
    height: 60rpx;
    display: flex;
    /*flex-direction: column;*/
    align-items: center;
    justify-content: flex-end;
    z-index: 999;
}
.progress-section{
    width: 20rpx;
    height: 20rpx;
    border: 4rpx solid #c9a16d;
    background: #fff;
    border-radius: 50%;
    /*margin-bottom: 10rpx;*/
}
.progress-section-items.check:first-child .progress-section{
  background-color: #c9a16d;
}
.progress-title{
    font-size: 24rpx;
    color: #888;
    position: absolute;
    margin-top:30rpx;
    margin-left:15rpx;
}
.sign-btn{
    line-height: 60rpx;
    width: 35%;
    background: #c9a16d;
    color: #fff;
    margin: 0 auto;
    text-align: center;
    border-radius: 10rpx;
    font-size: 32rpx;
}

.signIn-rules{
    display: flex;
    flex-direction: column;
    padding: 40rpx 5% 20rpx 5%;
    font-size: 28rpx;
    color: #888;
}
.rule-title{
    margin-bottom: 10rpx;
}

.signIn-img image{
    width: 100%;
}

.button-bottom{
    color: #fff;
    background: #c9a16d;
    font-size: 32rpx;
    line-height: 80rpx;
    text-align: center;
    position: absolute;
    bottom: 0;
    width: 100%;
}

.modal-screen{
    position: fixed;
    width: 100%;
    height: 100%;
    opacity: 0.7;
    background-color: #000;
    top: 0;
    left: 0;
    z-index: 1000;
}
.chargeModal{
    position: fixed;
    top: 200rpx;
    width: 90%;
    margin: 0 5%;
    height: 500rpx;
    background-color: #fff;
    display: flex;
    flex-direction: column;
    z-index: 9999;
    font-size: 28rpx;
    border-radius: 10rpx;
}
.chargeModal-title{
    height: 60rpx;
    color: #c9a16d;
    padding: 0 5%;
    border-top-left-radius: 10rpx;
    border-top-right-radius: 10rpx;
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
}
.modal-btn{
    color: #888;
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    border: 2rpx solid #888;
    display: flex;
    align-items: center;
}
.close{

}
.beforeMore{
    width: 14rpx;
    height: 14rpx;
    border-right: 2rpx solid transparent;
    border-bottom: 2rpx solid transparent;
    border-top: 2rpx solid #888;
    border-left: 2rpx solid #888;
    transform:rotate(-45deg);
    margin-left: 12rpx;
}
.afterMore{
    width: 14rpx;
    height: 14rpx;
    border-right: 2rpx solid #888;
    border-bottom: 2rpx solid transparent;
    border-top: 2rpx solid #888;
    border-left: 2rpx solid transparent;
    transform:rotate(45deg);
    margin-left: 6rpx;
}

.chargeItems{
    display: flex;
    flex-direction: column;
    line-height: 80rpx;
    padding: 0 10%;
    color: #888;
    font-size: 24rpx;
    width: 100%;
}
.weekName{
    width: 100%;
    height: 60rpx;
    padding: 0 6% 0 3%;
    display: flex;
    justify-content: space-between;
}
.weekName view{
    font-size: 24rpx;
    color: #888;
    text-align: center;
    height: 60rpx;
    width: 28rpx;
}
.week{
    width: 100%;
    height: 60rpx;
}
.signDate{
    width: 77rpx;
    float: left;
    /*text-align: center;*/
    font-size: 22rpx;
    height: 60rpx;
    color: #888;
    display:flex;
    align-items:center;
    justify-content:center;

}
.date-style{
    /*padding: 10rpx;*/
    border-radius: 50%;
    width:40rpx;
    height:40rpx;
    /*text-align:center;*/
    /*line-height:40rpx;*/

    display:flex;
    align-items:center;
    justify-content:center;


}
.selected{
    background: #c9a16d;
    color: #fff;
}

.modal{
    position: fixed;
    bottom: 0;
    width: 100%;
    background-color: #fff;
    display: flex;
    flex-direction: column;
    z-index: 9999;
    font-size: 28rpx;
}
.modal-title{
    line-height: 60rpx;
    text-align: center;
    background-color: #c9a16d;
    color: #fff;
    padding: 0 5%;
    font-size: 32rpx;
}
.modal-title span{
    margin-left: 20rpx;
    font-size: 28rpx;
}
.modalItems{
    display: flex;
    align-items: center;
    float: left;
    height: 60rpx;
    margin: 0 5%;
    color: #888;
    font-size: 28rpx;
}
.modalItemsTitle{
    width: 25%;
    text-align: right;
}
.modalDetail{
    color: #888;
    width: 50%;
    height: 60rpx;
    border-bottom: 1rpx solid #eee;
}
.getCode{
    font-size: 24rpx;
    color: #fff;
    background: #c9a16d;
    padding: 4rpx 10rpx;
    border-radius: 20rpx;
}
.btn-area{
    margin-top: 40rpx;
    margin-bottom: 20rpx;
    display: flex;
    padding: 0 25%;
    justify-content: space-between;
}