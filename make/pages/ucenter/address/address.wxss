page {
    background-color: #F4F4F4;
}
.container {
    height: auto;
    overflow: hidden;
    width: 100%;
}

.touch-item {
    display: flex;
    justify-content: space-between;
    margin-bottom: 4rpx;
    width: 100%;
    overflow: hidden;
    background: #fff;
}

.touch-item.checked{
  border-left:10rpx solid #c9a16d;
}

.content {
    width: 100%;
    padding: 20rpx;
    line-height: 50rpx;
    margin-right:0;
    -webkit-transition: all 0.4s;
    transition: all 0.4s;
    -webkit-transform: translateX(180rpx);
    transform: translateX(180rpx);
    margin-left: -180rpx
}

.del {
    background-color: #c9a16d;
    width: 180rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: #fff;
    -webkit-transform: translateX(180rpx);
    transform: translateX(180rpx);
    -webkit-transition: all 0.4s;
    transition: all 0.4s;
    font-size: 28rpx;
}

.touch-move-active .content,
.touch-move-active .del {
    -webkit-transform: translateX(0);
    transform: translateX(0);
}
.line-items-top{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 5%;
    width: 100%;
    color: #898989;
}
.line-items-top-left{
    font-size: 28rpx;
}
.line-items-top-left span:nth-child(3){
    color: #898989;
}
.line-items-top-left image{
    width: 30rpx;
    height: 30rpx;
    margin-right: 10rpx;
}
.line-items-bottom{
    display: flex;
    align-items: center;
    padding-left: 10%;
    width: 100%;
    font-size: 28rpx;
}
.address-style{
    color: #898989;
}
.selectedAddress{
    color: #c9a16d;
}

.button-bottom{
    background: #c9a16d;
    font-size: 28rpx;
    height: 80rpx;
    width: 100%;
    position: absolute;
    bottom: 0;
}
.btn-items{
    color: #fff;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}
.button-bottom image{
    width: 30rpx;
    height: 30rpx;
    margin-left: 10rpx;
}