page {
    background-color: #F4F4F4;
}

.container {
    height: auto;
    overflow: hidden;
    width: 100%;
}

.touch-item {
    height: 70px;
    display: flex;
    justify-content: space-between;
    border-bottom:1px solid #ccc;
    width: 100%;
    overflow: hidden;
    background: #fff;
}

.content {
    padding: 10px;
    line-height: 22px;
    margin-right:0;
    -webkit-transition: all 0.4s;
    transition: all 0.4s;
    -webkit-transform: translateX(90px);
    transform: translateX(90px);
    margin-left: -90px
}

.del {
    background-color: #c9a16d;
    width: 90px;
    display: none;
    text-align: center;
    line-height: 70px;
    color: #fff;
    -webkit-transform: translateX(90px);
    transform: translateX(90px);
    -webkit-transition: all 0.4s;
    transition: all 0.4s;
}

.touch-move-active .line-items{
    -webkit-transform: translateX(-90px);
    transform: translateX(-90px);
    -webkit-transition: all 0.4s;
    transition: all 0.4s;
}

.touch-move-active .del {
    -webkit-transform: translateX(0);
    transform: translateX(0);
    display: block;
}

.button-bottom{
    background: #c9a16d;
    font-size: 14px;
    height: 40px;
    width: 100%;
    position: absolute;
    bottom: 0;
}
.btn-items{
    color: #fff;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}
.button-bottom image{
    width: 15px;
    height: 15px;
    margin-left: 5px;
}

.line-items{
    display: flex;
    flex-direction: column;
    justify-content: center;
    width: 100%;
}
.line-items-top{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 5%;
    width: 100%;
}
.line-items-top-left{
    display: flex;
}
.line-items-top-left image{
    width: 15px;
    height: 15px;
    margin-right: 5px;
}
.line-items-top-left span{
    margin-left: 5px;
    color: #898989;
}
.line-items-bottom{
    display: flex;
    align-items: center;
    padding-left: 10%;
    width: 100%;
}