page{
    height: 100%;
    background: #f4f4f4;
}
.container{
    height: auto;
    overflow: hidden;
}
.nav-top{
    background: #fff;
    padding: 0 15%;
    width: 100%;
    height: 60rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.unselected{
    color: #818181;
}
.selected{
    color: #c9a16d;
    border-bottom: 1px solid #c9a16d;
}

.couponList{
    width: 100%;
}
.list-items{
    width: 90%;
    margin: 40rpx 5%;
}
.coupon-top{
    width: 100%;
    height: 160rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    overflow: hidden;
}
.coupon-top-items{
    display: flex;
}
.coupon-top-left{
    font-size: 96rpx;
    color: #fff;
    display: flex;
    justify-content: center;
    width: 160rpx;
    height: 120rpx;
}
.useableSign{
    font-size: 40rpx;
    color: #c9a16d;
    background-color: #fff;
    width: 40rpx;
    height: 40rpx;
    line-height: 40rpx;
    text-align: center;
    border-radius: 50%;
    margin-top: 20rpx;
}
.coupon-top-right{
    margin-left: 20rpx;
    font-size: 48rpx;
    color: #fff;
    display: flex;
    flex-direction: column;
    height: 120rpx;
}
.coupon-top-right span{
    font-size: 28rpx;
}
.coupon-top-tips{
    width: 80rpx;
    position: absolute;
    right: -8rpx;
    bottom: 0;
}

.tips-title{
    width: 100%;
    color: #fff;
    font-size: 20rpx;
    display: flex;
    justify-content: center;
    align-items: flex-end;
}
.tips-title span:first-child{
    width: 50%;
    line-height: 25rpx;
}
.arrow-right{
    width: 8rpx;
    height: 8rpx;
    border-right: 2rpx solid #fff;
    border-top: 2rpx solid #fff;
    transform:rotate(45deg);
    margin-bottom: 6rpx;
    margin-left: 2rpx;
}
.arrow-down{
    width: 8rpx;
    height: 8rpx;
    border-right: 2rpx solid #fff;
    border-bottom: 2rpx solid #fff;
    transform:rotate(45deg);
    margin-bottom: 6rpx;
    margin-left: 2rpx;
}
.mark{
    width: 0;
    height: 0;
    border-right: 50rpx solid #B78B52;
    border-bottom: 50rpx solid #B78B52;
    border-top: 50rpx solid transparent;
    border-left: 50rpx solid transparent;
    position: absolute;
    right: 0;
    bottom: 0;
}

.coupon-center{
    color: #cca674;
    font-size: 24rpx;
    background-color: #fff;
    text-align: center;
    padding: 4rpx 0;
}
.coupon-bottom{
    display: flex;
    flex-direction: column;
    padding: 10rpx 5%;
    border: 2rpx solid #c9a16d;
    font-size: 24rpx;
    color: #888;
}

.uselessSign{
    font-size: 40rpx;
    color: #999;
    background-color: #fff;
    width: 40rpx;
    height: 40rpx;
    line-height: 40rpx;
    text-align: center;
    border-radius: 50%;
    margin-top: 20rpx;
}
.umark{
    width: 0;
    height: 0;
    border-right: 50rpx solid #999;
    border-bottom: 50rpx solid #999;
    border-top: 50rpx solid transparent;
    border-left: 50rpx solid transparent;
    position: absolute;
    right: 0;
    bottom: 0;
}
.couponUsedMark{
    width: 140rpx;
    height: 40rpx;
    line-height: 40rpx;
    transform: rotate(-45grad);
    position: absolute;
    left: -30rpx;
    top: 10rpx;
    color: #fff;
    background-color: #bfbfbf;
    font-size: 20rpx;
    text-align: center;
}
.ucoupon-center{
    color: #999;
    font-size: 24rpx;
    background-color: #fff;
    text-align: center;
    padding: 4rpx 0;
}
.ucoupon-bottom{
    display: flex;
    flex-direction: column;
    padding: 10rpx 5%;
    border: 2rpx solid #999;
    font-size: 24rpx;
    color: #888;
}
