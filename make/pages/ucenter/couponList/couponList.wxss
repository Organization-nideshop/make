page{
    height: 100%;
    background: #f4f4f4;
}
.container{
    /*background: #f4f4f4;*/
    height: auto;
    overflow: hidden;
}
.nav-top{
    background: #fff;
    padding: 0 15%;
    width: 100%;
    height: 30px;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.unselected{
    color: #818181;
}
.selected{
    color: #c9a16d;
    border-bottom: 1px solid #c9a16d;
}

.couponList{
    width: 100%;
}
.list-items{
    width: 90%;
    /*height: 70px;*/
    margin: 20px 5%;
}
.coupon-top{
    width: 100%;
    height: 80px;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    overflow: hidden;
}
.coupon-top-items{
    display: flex;
}
.coupon-top-left{
    font-size: 48px;
    color: #fff;
    display: flex;
    justify-content: center;
    width: 80px;
    height: 60px;
}
.useableSign{
    font-size: 20px;
    color: #c9a16d;
    background-color: #fff;
    width: 20px;
    height: 20px;
    line-height: 20px;
    text-align: center;
    border-radius: 50%;
    margin-top: 10px;
}
.coupon-top-right{
    margin-left: 10px;
    font-size: 24px;
    color: #fff;
    display: flex;
    flex-direction: column;
    height: 60px;
}
.coupon-top-right span{
    font-size: 14px;
}
.coupon-top-tips{
    width: 40px;
    position: absolute;
    right: -4px;
    bottom: 0;
}

.tips-title{
    width: 100%;
    color: #fff;
    font-size: 10px;
    display: flex;
    justify-content: center;
    align-items: flex-end;
}
.tips-title span:first-child{
    width: 50%;
}
.arrow-right{
    width: 4px;
    height: 4px;
    border-right: 1px solid #fff;
    border-bottom: 1px solid transparent;
    border-top: 1px solid #fff;
    border-left: 1px solid transparent;
    transform:rotate(45deg);
    margin-bottom: 3px;
    margin-left: 1px;
}
.arrow-down{
    width: 4px;
    height: 4px;
    border-right: 1px solid #fff;
    border-bottom: 1px solid #fff;
    border-top: 1px solid transparent;
    border-left: 1px solid transparent;
    transform:rotate(45deg);
    margin-bottom: 3px;
    margin-left: 1px;
}
.mark{
    width: 0;
    height: 0;
    border-right: 25px solid #B78B52;
    border-bottom: 25px solid #B78B52;
    border-top: 25px solid transparent;
    border-left: 25px solid transparent;
    position: absolute;
    right: 0;
    bottom: 0;
}

.coupon-center{
    color: #cca674;
    font-size: 12px;
    background-color: #fff;
    text-align: center;
    padding: 2px 0;
}
.coupon-bottom{
    display: flex;
    flex-direction: column;
    padding: 5px 5%;
    /*border-left: 1px solid #c9a16d;
    border-right: 1px solid #c9a16d;*/
    border: 1px solid #c9a16d;
    font-size: 10px;
    color: #888;
}
