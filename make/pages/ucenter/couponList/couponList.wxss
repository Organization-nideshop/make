.uselessSign{
    font-size: 20px;
    color: #999;
    background-color: #fff;
    width: 20px;
    height: 20px;
    line-height: 20px;
    text-align: center;
    border-radius: 50%;
    margin-top: 10px;
}
.umark{
    width: 0;
    height: 0;
    border-right: 25px solid #999;
    border-bottom: 25px solid #999;
    border-top: 25px solid transparent;
    border-left: 25px solid transparent;
    position: absolute;
    right: 0;
    bottom: 0;
}
.couponUsedMark{
    width: 70px;
    height: 20px;
    line-height: 20px;
    transform: rotate(-45grad);
    position: absolute;
    left: -15px;
    top: 5px;
    color: #fff;
    background-color: #bfbfbf;
    font-size: 10px;
    text-align: center;
}
.ucoupon-center{
    color: #999;
    font-size: 12px;
    background-color: #fff;
    text-align: center;
    padding: 2px 0;
}
.ucoupon-bottom{
    display: flex;
    flex-direction: column;
    padding: 5px 5%;
    border: 1px solid #999;
    font-size: 10px;
    color: #888;
}
