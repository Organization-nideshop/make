page{
    height: 100%;
    width: 100%;
    background: #fff;
}
.container{
    background: #fff;
    height: auto;
    overflow: hidden;
    width: 100%;
}

.title{
    background: #EBEBEB;
    color: #999;
    font-size: 12px;
    line-height: 40px;
    padding-left: 5%;
}

.radio-group{
    padding: 0 15px 0 15px;
    margin-bottom: 30px;
}
.radio-style{
    width: 100%;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    color: #666;
    font-size: 12px;
    border-bottom: 0.5px solid #f4f4f4;
}
.radio-style radio{
    transform:scale(.8);
    width: 40rpx;
    height: 40rpx;
    color: #c9a16d;
}
/* 未选中的 背景样式 */
radio .wx-radio-input{
    border: 0;
    background: transparent !important;
    border-radius: 50%;
}
radio .wx-radio-input.wx-radio-input-checked{
    border: 1px solid #c9a16d !important;

}
/* 选中后的 对勾样式 */
radio .wx-radio-input.wx-radio-input-checked::before{
