page{
    height: 100%;
    width: 100%;
    background: #fff;
}
.container{
    background: #fff;
    height: auto;
    overflow: hidden;
    width: 100%;
}
.chargeTitle{
    font-size: 28rpx;
    padding-left: 30rpx;
    margin-bottom: 20rpx;
    color: #c9a16d;
}
.chargeTips{
    font-size: 28rpx;
    padding-left: 30rpx;
    margin-top: 20rpx;
    color: #c9a16d;
}
li{
    display: flex;
    align-items: center;
    height: 50rpx;
    padding-left: 30rpx;
    color: grey;
    font-size: 24rpx;
}
.dot{
    width: 10rpx;
    height: 10rpx;
    border-radius: 50%;
    background: #c9a16d;
    margin-right: 10rpx;
}
.buttonCharge{
    margin: 60rpx 0 20rpx 0;
}
.buttonCharge button{
    border-radius: 20rpx;
}
.ensureCharge{
    font-size: 28rpx;
    color: #fff;
    background: #c9a16d;
    width: 90%;
    margin-bottom: 20rpx;

}
.foot{
    color: grey;
    text-align: center;
    font-size: 28rpx;
    width: 100%;
    margin-bottom: 20rpx;
}

.radio-group{
    padding: 0 30rpx 0 30rpx;
    margin-bottom: 60rpx;
}
.radio-style{
    width: 100%;
    height: 80rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    color: #666;
    font-weight: bold;
    font-size: 24rpx;
    border-bottom: 1rpx solid #f4f4f4;
}
.radio-style radio{
    transform:scale(.5);
    border: 2rpx solid #c9a16d;
    background: transparent;
    border-radius: 50%;
    width: 40rpx;
    height: 40rpx;
    padding: 0.3em;
    text-align: center;
}
/* 未选中的 背景样式 */
radio .wx-radio-input{
    border: 2rpx solid #c9a16d;
    background: transparent;
    border-radius: 50%;
    width: 36rpx;
    height: 36rpx;
}
/* 选中后的 背景样式  */
radio .wx-radio-input.wx-radio-input-checked{
    border: none;
    background: #c9a16d;
}
/* 选中后的 对勾样式 */
radio .wx-radio-input.wx-radio-input-checked::before{
    display: none;
}

.codeCharge{
    font-size: 28rpx;
    color: #c9a16d;
    width: 90%;
    border: 2rpx solid #c9a16d;
    background: #fff;
}
.modal-screen{
    position: fixed;
    width: 100%;
    height: 100%;
    opacity: 0.5;
    background-color: #000;
    top: 0;
    left: 0;
    z-index: 1000;
}
.chargeModal{
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 500rpx;
    background-color: #fff;
    display: flex;
    flex-direction: column;
    z-index: 9999;
    font-size: 24rpx;
}
.chargeModal-title{
    line-height: 80rpx;
    background-color: #eee;
    color: #888;
    padding: 0 5%;
}
.chargeItems{
    border-bottom: 1rpx solid #eee;
    display: flex;
    line-height: 80rpx;
    padding: 0 5%;
    color: #888;
    font-size: 24rpx;
}
.chargeItems-sp{
    border-bottom: 1rpx solid #eee;
    display: flex;
    line-height: 80rpx;
    color: #c9a16d;
    padding: 0 5%;
}
.chargeItems-sp span{
    color: #c9a16d;
}
.chargeItemsTitle{
    width: 30%;
}
.chargeDetail{
    color: #888;
}
.ensurePay{
    margin-top: 20rpx;
    font-size: 28rpx;
    color: #fff;
    background: #c9a16d;
    width: 80%;
    margin-bottom: 20rpx;
    border-radius: 20rpx;
}

.codeChargeModal{
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 500rpx;
    background-color: #fff;
    display: flex;
    flex-direction: column;
    z-index: 9999;
    color: #999;
    font-size: 24rpx;
}
.codeChargeModal .chargeItems input{
    font-size: 24rpx;
    height: 80rpx;
}