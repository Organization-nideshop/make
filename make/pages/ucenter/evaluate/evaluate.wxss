page{
    height: 100%;
    background: #c9a16d;
}
.container{
    background: #c9a16d;
    height: auto;
    overflow: hidden;
}
.top-items{
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 50rpx 0 60rpx 0;
}
.top-items image{
    width: 250rpx;
    margin-bottom: 10rpx;
}
.top-items text{
    font-size: 40rpx;
    color: #fff;
}

.content{
    width: 100%;
    background: #fff;
    position: relative;
    border-radius: 20rpx;
    padding: 40rpx 20rpx;
}
.content:before {
    content:"";
    position: absolute;
    left: 45%;
    top: -30rpx;
    width: 0;
    height: 0;
    border-left: 30rpx solid transparent;
    border-right: 30rpx solid transparent;
    border-bottom: 40rpx solid #fff;
}
.content:after {
    content:"";
    position: absolute;
    left: 45%;
    bottom: -30rpx;
    width: 0;
    height: 0;
    border-left: 30rpx solid transparent;
    border-right: 30rpx solid transparent;
    border-top: 40rpx solid #fff;
}
.tips{
    padding: 0 20rpx;
    margin: 30rpx 0;
    color: #666;
}

.evaluation{
    background: #c9a16d;
    border-radius: 10rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 10rpx 20rpx 30rpx 20rpx;
}
.title{
    font-size: 40rpx;
    color: #fff;
    margin-bottom: 10rpx;
}
.list-items{
    background: #fff;
    display: flex;
    align-items: center;
    /*height: 80rpx;*/
    width: 100%;
    border-radius: 10rpx;
    padding: 20rpx;
    margin-bottom: 20rpx;
}
.txt-left{
    color: #999;
    border-right: 1px solid #999;
    padding-right: 20rpx;
    margin-right: 20rpx;
    font-size: 28rpx;
}

.list-items input{
    flex: 1;
}
.evaluation textarea{
    background: #fff;
    border-radius: 10rpx;
    height: 150rpx;
    flex: 1;
}
.defaultInfo{
    color: #999;
}
.list-items-sp{
    background: #fff;
    display: flex;
    align-items: flex-start;
    width: 100%;
    border-radius: 10rpx;
    padding: 20rpx;
    margin-bottom: 20rpx;
}
.txt-left-sp{
    color: #999;
    padding-right: 20rpx;
    margin-right: 20rpx;
    font-size: 28rpx;
}
.list-items-upload{
    background: #fff;
    display: flex;
    flex-direction: column;
    width: 100%;
    border-radius: 10rpx;
    padding: 20rpx;
    margin-bottom: 20rpx;
}

.uploadView{
    border: 1px solid #999;
    margin-top: 30rpx;
    box-shadow: 0 5rpx #e9e9e9;
}
.uploadInfo{
    display: flex;
    align-items: center;
    padding: 0 20rpx;
    height: 80rpx;
    font-size: 28rpx;
    border-bottom: 1px solid #999;
}
.selectImg{
    height: 60rpx;
    line-height: 60rpx;
    padding: 0 15rpx;
    border: 1px solid #999;
    border-radius: 10rpx;
    font-size: 28rpx;
    color: #1a1a1a;
    margin-right: 20rpx;
    float: right;
}
.uploadImg{
    height: 60rpx;
    line-height: 60rpx;
    padding: 0 15rpx;
    border-radius: 10rpx;
    font-size: 28rpx;
    color: #fff;
    background: #c9a16d;
    float: right;
}
.uploadInfo text{
    flex: 1;
}

.preview{
    padding: 20rpx;
}
.img-area{
    text-align:center;
    line-height: 200rpx;
    width:273rpx;
    height:200rpx;
    border:1px solid #999;
    overflow:hidden;
    margin: 10rpx;
    float:left;
}
.preview image{
    max-width:273rpx;
    max-height:200rpx;
}

.btn-area{
    width: 100%;
    color: #fff;
    background:rgba(255,255,255,0.3);
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 32rpx;
