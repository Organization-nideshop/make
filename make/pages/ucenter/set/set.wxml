<view class="container">
    <view class="input-items">
        <span>设置密码</span>
        <input password="true" maxlength="6" placeholder-style="color:#cdcdcd" placeholder="请输入6位数字密码" bindinput="setPsw" />
    </view>
    <view class="input-items">
        <span>确认密码</span>
        <input password="true" maxlength="6" placeholder-style="color:#cdcdcd" placeholder="请输入6位数字密码" bindinput="confirmPsw" />
    </view>
    <view class="tips">客服电话：400-022-6999</view>
    <view class="button-bottom">
        <button class="ensure" bindtap="checkPsw">确 定</button>
        <button class="cancel" bindtap="backToPage">取 消</button>
    </view>
</view>

