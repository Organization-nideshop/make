page{
    height: 100%;
    width: 100%;
    background: #fff;
}
.container{
    background: #fff;
    height: auto;
    overflow: hidden;
    width: 100%;
}
.addRelTips{
    font-size: 12px;
    padding-left: 10px;
    margin-bottom: 30px;
}
.addRelTips span{
    margin-left: 5px;
}
.input-list{
    padding: 0 5%;
    width: 100%;
}
.input-items{
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    height: 40px;
    font-size: 14px;
    border-bottom: 1px solid #eee;
}
.relType{
    width: 30%;
}
.showList{
    width: 0;
    height: 0;
    border-right: 5px solid transparent;
    border-bottom: 5px solid transparent;
    border-top: 5px solid #333;
    border-left: 5px solid transparent;
}
.hideList{
    width: 0;
    height: 0;
    border-right: 5px solid transparent;
    border-bottom: 5px solid #333;
    border-top: 5px solid transparent;
    border-left: 5px solid transparent;
}
.relList{
    /*border-bottom: 1px solid #eee;*/
    padding-top: 10px;
    width: 100%;
    padding: 0 5%;
}
.relationship{
    font-size: 10px;
    width: 60px;
    padding: 3px 0;
    border: 1px solid #eee;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 10px 5%;
    float: left;
}
.selected{
    border: 1px solid #c9a16d;
    color: #c9a16d;
}