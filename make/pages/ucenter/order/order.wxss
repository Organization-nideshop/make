.container {
  font-family: PingFang SC Medium;
  background: #fff;
}

.cate-nav {
  width: 100%;
  left: 0;
  top: 0;
  z-index: 1000;
}

.cate-nav-body {
  height: 84rpx;
  background: #eee;
  /*border-top: 1px solid rgba(0,0,0,.15);
    overflow: hidden;white-space: nowrap;  */
  padding: 0 15rpx;
}

.cate-nav .switchitem {
  display: inline-block;
  height: 84rpx;
  width: 25%;
  padding: 0 15rpx;
}

.cate-nav .switchitem .name {
  display: block;
  height: 84rpx;
  padding: 0 20rpx;
  line-height: 95rpx;
  color: #888;
  font-size: 32rpx;
  width: auto;
