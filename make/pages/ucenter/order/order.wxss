/*  重写 radio 样式  */
.radio-group{
   /* display: flex;*/
}
.radio-style{
width:33%;
float:left;
color:#888;
display:flex;
flex-flow:row nowrap;
align-items:center;
justify-content:flex-start;

}
.radio-style radio{
    transform:scale(.5);
    background: transparent;
    border-radius: 50%;
    width: 40rpx;
    height: 40rpx;
    padding: 0.3em;
    text-align: center;
    box-shadow: 0rpx 0rpx 0rpx 2rpx #c9a16d;
    display:flex;
}
/* 未选中的 背景样式 */
radio .wx-radio-input{
    border: 0;
    background: transparent;
    border-radius: 50%;
    width: 40rpx;
    height: 40rpx;
}
/* 选中后的 背景样式  */
radio .wx-radio-input.wx-radio-input-checked{
    border: none;
    background: #c9a16d;
}
/* 选中后的 对勾样式 */
radio .wx-radio-input.wx-radio-input-checked::before{
    display: none;
}

