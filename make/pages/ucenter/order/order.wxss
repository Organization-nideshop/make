.orders,.ordersdetail {
  height: auto;
  width: 100%;
  overflow: hidden;
}

.order {
  margin: 0 15rpx;
  border-bottom: 5rpx solid #eee;
}

.order.content{
  padding-top: 40rpx;
  border-bottom: 1rpx solid #eee;
}
.order.comment{
  /*border-bottom: 1rpx solid #eee;*/
  border-bottom: 0;
}

.order.content>.b:first-child{
  border-top: 0;
}

.order .h {
  height: 83.3rpx;
  line-height: 83.3rpx;
  border-bottom: 1px solid #f4f4f4;
  font-size: 30rpx;
  color: #333;
  padding: 0 15rpx;
}

.order .h .l {
  float: left;
  color: #333;
}

.order .h .l label {
  color: #888;
}

.order .h .r {
  float: right;
  color: #c9a16d;
  font-size: 28rpx;
  font-family: PingFang SC Bold;
  width: 160rpx;
}

.order .goods {
  display: flex;
  align-items: center;
  height: 199rpx;
  padding: 0 15rpx;
}

.order .goods .img {
  height: 145.83rpx;
  width: 145.83rpx;
  background: #f4f4f4;
}

.order .goods .img image {
  height: 145.83rpx;
  width: 145.83rpx;
}

.order .goods .info {
  height: 145.83rpx;
  flex: 1;
  padding-left: 40rpx;
}

.order .goods .name {
  display: block;
  height: 44rpx;
  line-height: 44rpx;
  font-size: 30rpx;
  font-family: PingFang SC Bold;
}

.order .goods .detail {
  display: block;
  width:130rpx;
height:54rpx;
line-height:54rpx;
  color: #fff;
  font-size: 30rpx;
  font-family: PingFang SC Bold;
  background-color: #c9a16d;
  text-align: center;
  border-radius: 10rpx;
}

.order .goods .shop, .order .goods .type {
  display: block;
  height: 44rpx;
  line-height: 44rpx;
  color: #888;
  font-size: 28rpx;
}

.order .goods .price, .order .goods .number {
  display: block;
  color: #c9a16d;
  font-size: 30rpx;
  font-family: PingFang SC Heavy;
}

.order .goods .type, .order .goods .number {
  height: 60rpx;
  line-height: 60rpx;
}

.order .goods .price {
  height: 54rpx;
  line-height: 54rpx;
}

.order .goods .status {
  height: 145.83rpx;
  width: 160rpx;
  color: #b4282d;
  font-size: 25rpx;
}

.order .b {
  height: 70rpx;
  line-height: 70rpx;
  border-top: 1px solid #f4f4f4;
  font-size: 30rpx;
  color: #333;
  padding: 0 15rpx;
}

.order .b .l,.order .b .d {
  float: left;
  font-family: PingFang SC Heavy;
  font-size: 34rpx;
  color: #c9a16d;
}

.order .b .d {
  font-size: 28rpx;
}

.order .b .r {
  float: right;
  
height:70rpx;
line-height:70rpx;
display:flex;
align-items:center;

}

.order .b .btn {
  height:50rpx;
line-height:50rpx;
text-align:center;
padding:0 20rpx;
border-radius:5rpx;
font-size:28rpx;
color:#c9a16d;
background:#fff;
float:left;
border:1rpx solid #c9a16d;
margin-left:12rpx;
}

.order .b .t {
  float: left;
  width:30%;
  color:#333;
}

.order .b .c {
  width:70%;
  color:#999;
}
.order.comment .b{
height: 75rpx;
line-height: 75rpx;
}

.order.comment .b .t{
width:20%;
color: #888;
font-size: 26rpx;
}
.order.comment .b .c {
  width: 80%;
}
.order.comment .b .t,.order.comment .b .c  {
  font-family: PingFang SC Heavy;
  color:#888;
  float: left;
}
.order.comment .b {
  border-top: 0;
  border-bottom: 1px solid #f4f4f4;
}
