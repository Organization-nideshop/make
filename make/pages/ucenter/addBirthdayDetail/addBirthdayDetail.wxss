page{
    height: 100%;
    width: 100%;
    background: #fff;
}
.container{
    background: #fff;
    height: auto;
    overflow: hidden;
    width: 100%;
}
.input-items{
    display: flex;
    align-items: center;
    width: 100%;
    height: 100rpx;
    font-size: 28rpx;
    border-bottom: 2rpx solid #eee;
    margin: 0 5%;
}
.input-items input{
    height: 100rpx;
    font-size: 26rpx;
}
.input-items span{
    width: 25%;
}
.ensure-btn{
    color: #fff;
    background: #c9a16d;
    font-size: 28rpx;
    line-height: 80rpx;
    text-align: center;
    width: 90%;
    margin: 0 5%;
    border-radius: 20rpx;
}
.cancel-btn{
    color: #c9a16d;
    border: 2rpx solid #c9a16d;
    background: #fff;
    font-size: 28rpx;
    line-height: 80rpx;
    text-align: center;
    width: 90%;
    margin: 60rpx 5% 20rpx 5%;
    border-radius: 20rpx;
}

.input-style{
    color: #999;
}