page{
    height: 100%;
    width: 100%;
    background: #f4f4f4;
}
.container{
    background: #f4f4f4;
    height: auto;
    overflow: hidden;
    width: 100%;
}

.input-list{
    background: #fff;
    width: 100%;
    margin-bottom: 5px;
}
.input-items{
    padding: 0 5%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    height: 40px;
    font-size: 12px;
    border-bottom: 1px solid #f4f4f4;
}
.input-items input{
    height: 100%;
    width: 70%;
    font-size: 12px;
}
.input-items-ad{
    padding: 0 5%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    height: 50px;
    font-size: 12px;
    border-bottom: 1px solid #f4f4f4;
}
span{
    color: #4e4e4e;
    font-size: 12px;
    width: 30%;
}

.arrow-right{
    width: 5px;
    height: 5px;
    border-right: 1px solid #000;
    border-bottom: 1px solid transparent;
    border-top: 1px solid #000;
    border-left: 1px solid transparent;
    transform:rotate(45deg);
}

textarea{
    height: 100%;
    padding-top: 20px;
    /*line-height: 50px;*/
}
.input-style{
    color: #e3e3e3;
}

/*swtich整体大小*/
.wx-switch-input{
    width:82rpx !important;
    height:40rpx !important;
    border-radius: 20rpx;
}
/*白色样式（false的样式）*/
.wx-switch-input::before{
    width:80rpx !important;
    height: 36rpx !important;
}
/*绿色样式（true的样式）*/
.wx-switch-input::after{
    width: 40rpx !important;
    height: 36rpx !important;
}
/*swtich样式end*/

switch{
    box-shadow: 5px 5px 5px #888;
}

.btn-area{
    width: 90%;
    margin: 0 5%;
    color: #fff;
    background: #c9a16d;
    height: 40px;
    line-height: 40px;
    text-align: center;
}