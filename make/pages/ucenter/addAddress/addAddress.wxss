page{
    height: 100%;
    width: 100%;
    background: #f4f4f4;
}
.container{
    background: #f4f4f4;
    height: auto;
    overflow: hidden;
    width: 100%;
}

.input-list{
    background: #fff;
    width: 100%;
    margin-bottom: 10rpx;
}
.input-items{
    padding: 0 5%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    height: 100rpx;
    font-size: 28rpx;
    border-bottom: 2rpx solid #f4f4f4;
}
.input-items input{
    height: 100%;
    width: 70%;
    font-size: 24rpx;
}
.input-items-ad{
    padding: 0 5%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    height: 100rpx;
    font-size: 28rpx;
    border-bottom: 2rpx solid #f4f4f4;
}
span{
    color: #4e4e4e;
    font-size: 28rpx;
    width: 30%;
}

.arrow-right{
    width: 10rpx;
    height: 10rpx;
    border-right: 2rpx solid #4e4e4e;
    border-top: 2rpx solid #4e4e4e;
    transform:rotate(45deg);
}

textarea{
    height: 100%;
    padding-top: 40rpx;
}
.input-style{
    color: #e3e3e3;
}


/*swtich整体大小*/
.wx-switch-input{
    width:70rpx !important;
    height:30rpx !important;
    border-radius: 20rpx;
    box-shadow: 5rpx 5rpx 5rpx #999;
}
/*白色样式（false的样式）*/
.wx-switch-input::before{
    width:68rpx !important;
    height: 26rpx !important;
}
/*绿色样式（true的样式）*/
.wx-switch-input::after{
    width: 26rpx !important;
    height: 26rpx !important;
}
/*swtich样式end*/

.btn-area{
    width: 90%;
    margin: 0 5%;
    color: #fff;
    background: #c9a16d;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
}