page{
    height: 100%;
    width: 100%;
    background: #fff;
}
.container{
    background: #fff;
    height: auto;
    overflow: hidden;
    width: 100%;
}
.top-icon{
    width: 100%;
    display: flex;
    justify-content: center;
    margin: 40rpx 0;
}
.top-icon image{
    width: 140rpx;
    height: 140rpx;
    border-radius: 50%;
}
.input-list{
    padding: 0 5%;
    width: 100%;
}
.input-items{
    display: flex;
    align-items: center;
    width: 100%;
    height: 100rpx;
    font-size: 28rpx;
    border-bottom: 2rpx solid #eee;
}
.input-items input{
    height: 100rpx;
    font-size: 26rpx;
}
.input-items span{
    width: 20%;
}
.radio-group{
    display: flex;
}
.radio-style{
    height: 100rpx;
    width: 140rpx;
    display: flex;
    align-items: center;
    font-size: 26rpx;
    border-bottom: 0.5px solid #f4f4f4;
}
.radio-style radio{
    transform:scale(.5);
    border: 2rpx solid #c9a16d;
    background: transparent;
    border-radius: 50%;
    width: 40rpx;
    height: 40rpx;
    padding: 0.3em;
    text-align: center;
}
/* 未选中的 背景样式 */
radio .wx-radio-input{
    border: 0;
    background: transparent;
    border-radius: 50%;
    width: 36rpx;
    height: 36rpx;
}
/* 选中后的 背景样式  */
radio .wx-radio-input.wx-radio-input-checked{
    border: none;
    background: #c9a16d;
}
/* 选中后的 对勾样式 */
radio .wx-radio-input.wx-radio-input-checked::before{
    display: none;
}

.input-items-sp{
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    height: 100rpx;
    font-size: 28rpx;
    border-bottom: 2rpx solid #eee;
}
.sp-right{
    display: flex;
    align-items: center;
    color: #999;
    font-size: 26rpx;
}
.triangle{
    width: 0; 
    height: 0;
    border-right: 10rpx solid transparent;
    border-bottom: 10rpx solid transparent;
    border-top: 10rpx solid transparent;
    border-left: 10rpx solid #333;
    margin-left: 10rpx;
}

.button-bottom{
    color: #fff;
    background: #c9a16d;
    font-size: 28rpx;
    line-height: 80rpx;
    text-align: center;
    position: absolute;
    bottom: 0;
    width: 100%;
}

picker-view{
    width: 100%;
    height: 320rpx;
    position: absolute;
    bottom: 0;
}

picker-view-column{
    text-align: center;
    background: #DCDCDC;
}

.modal-screen{
    position: fixed;
    width: 100%;
    height: 100%;
    opacity: 0.5;
    background-color: #000;
    top: 0;
    left: 0;
    z-index: 1000;
}
.modal{
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 460rpx;
    display: flex;
    flex-direction: column;
    z-index: 9999;
    font-size: 24rpx;
    background-color: #eee;
}
.btn-area{
    width: 100%;
    padding: 0 5%;
    height: 80rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.btn-area span{
    height: 50rpx;
    width: 100rpx;
    font-size: 24rpx;
    border: 2rpx solid #DCDCDC;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 10rpx;
}
.btn-area span:nth-child(2){
    background: #c9a16d;
    color: #fff;
    border: none;
}
.modal-title{
    width: 100%;
    height: 60rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-top: 2rpx solid #DCDCDC;
}
.modal-title span{
    width: 30%;
    margin-right: 5%;
    text-align: center;
}
.selectedItems{
    height: 60rpx;
    text-align:center;
    color:#c9a16d;
}