page{
    height: 100%;
    width: 100%;
    background: #fff;
}
.container{
    background: #fff;
    height: auto;
    overflow: hidden;
    width: 100%;
}
.top-icon{
    width: 70px;
    height: 70px;
    border-radius: 50%;
    background: pink;
    margin: 20px auto;
}
.input-list{
    padding: 0 5%;
    width: 100;
}
.input-items{
    display: flex;
    align-items: center;
    width: 100%;
    height: 40px;
    font-size: 14px;
    border-bottom: 1px solid #eee;
}
.input-items input{
    height: 40px;
    color: #999;
    font-size: 12px;
}
.input-items span{
    width: 20%;
}
.radio-group{
    display: flex;
}
.radio-style{
    height: 40px;
    display: flex;
    align-items: center;
    font-size: 12px;
    border-bottom: 0.5px solid #f4f4f4;
    margin-right: 40px;
}
.radio-style radio{
    transform:scale(.5);
    border: 1px solid #c9a16d;
    background: transparent;
    border-radius: 50%;
    width: 40rpx;
    height: 40rpx;
    padding: 0.3em;
    text-align: center;
}
/* 未选中的 背景样式 */
radio .wx-radio-input{
    border: 1px solid #c9a16d;
    background: transparent;
    border-radius: 50%;
    width: 36rpx;
    height: 36rpx;
}
/* 选中后的 背景样式  */
radio .wx-radio-input.wx-radio-input-checked{
    border: none;
    background: #c9a16d;
}
/* 选中后的 对勾样式 */
radio .wx-radio-input.wx-radio-input-checked::before{
    display: none;
}

.input-items-sp{
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    height: 40px;
    font-size: 14px;
    border-bottom: 1px solid #eee;
}
.sp-right{
    display: flex;
    align-items: center;
    color: #999;
    font-size: 12px;
}
.triangle{
    width: 0; 
    height: 0;
    border-right: 5px solid transparent;
    border-bottom: 5px solid transparent;
    border-top: 5px solid transparent;
    border-left: 5px solid #333;
    margin-left: 5px;
}

.button-bottom{
    color: #fff;
    background: #c9a16d;
    font-size: 14px;
    line-height: 40px;
    text-align: center;
    position: absolute;
    bottom: 0;
    width: 100%;
}