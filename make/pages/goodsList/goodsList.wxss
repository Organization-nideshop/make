@import "../../lib/wxParse/wxList.wxss";
@import "../../lib/wxParse/wxCart.wxss";

page {
  height: 100%;
}

.container {
  background: #b99567;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.search {
  height: 60rpx;
  width: 100%;
  padding: 0 30rpx;
  background: #b99567;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: center;
}

.search .input {
  background-color: rgba(255, 255, 255, 0.3);
  border-radius: 46rpx;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  margin: 0 50rpx 0 130rpx;
}

.search .city {
  width: 105rpx;
  text-align: right;
}

.search .city text {
  color: #fff;
}

.cityImg {
  background-size: 100%;
  width: 40rpx;
  height: 40rpx;
  float: left;
  margin-top: -3px;
}

.search .txt {
  height: 42rpx;
  line-height: 42rpx;
  color: #fff;
  padding-left: 40rpx;
  font-size: 24rpx;
}

.catalog {
  flex: 1;
  width: 100%;
  background: #fff;
  display: flex;
  border-top: 1px solid #fafafa;
}

.catalog .nav {
  width: 162rpx;
  height: 100%;
  overflow: hidden;
}

.catalog .nav .item {
  text-align: center;
  line-height: 70rpx;
  color: #333;
  font-size: 28rpx;
  border-left: 6rpx solid #fff;
  border-bottom: 1rpx solid #eee;
  margin: 0 15rpx;
  padding: 10rpx 0;
}

.catalog .nav .itemContent {
  text-align: center;
  line-height: 50rpx;
  color: #333;
  font-size: 28rpx;
}

.catalog .nav .itemContent.active {
  color: #b99567;
  font-size: 28rpx;
  border-left: 6rpx solid #b99567;
  margin-left: -20rpx;
}

.subitem {
  border-bottom: 1rpx solid #eee;
  margin: 0 15rpx;
}

.catalog .nav .subitemContent {
  text-align: center;
  line-height: 60rpx;
  height: 60rpx;
  color: #333;
  font-size: 24rpx;
  border-left: 6rpx solid #fff;
  position: relative;
}

.catalog .nav .subitemContent.active {
  color: #b99567;
}

.catalog .nav .subitemContent.active:before {
  content: '';
  width: 0;
  height: 0;
  border: 10rpx solid transparent;
  border-left-color: #b99567;
  position: absolute;
  left: 100%;
  top: 50%;
  margin-top: -10rpx;
}

.catalog .cate {
  border-left: 1px solid #fafafa;
  flex: 1;
  height: 100%;
}

.catalog .bd {
  height: auto;
  width: 100%;
  overflow: hidden;
  padding: 20rpx 20rpx 40rpx 0;
  margin-top: 70rpx;
  float: left;
}

.catalog .bd .tip1_text, .catalog .bd .tip2_text {
  display: block;
  width: 100%;
  height: 40rpx;
  font-size: 24rpx;
  text-align: center;
  color: #999;
}

.sort-box {
  width: 588rpx;
}